<div class="wishlist-form">
<h1><%= @title %></h1>

<%= form_for @wishlist, class: "form-group", url:({action: @action}) do |f| %>
<%= f.text_field :item %>
<%= f.number_field :price, :class => 'text_field', :step => 'any' %>
<%= f.check_box :bought, label: "Bought?", :class => "bought" %>
<%= f.submit class: "submit", class: "btn btn-default", value: "Submit" %>
<% end %>

</div>
