<h1><%= @title %></h1>

<div class="table-master">
<table class='table table-hover'>
  <tr>
    <td class="table-headers">
      Name
    </td>
    <td>
      <%= @giftee.name %>
    </td>
  </tr>
  <tr>
    <td class="table-headers">
      Age
    </td>
    <td>
      <%= @giftee.age %>
    </td>
  </tr>
  <tr>
    <td class="table-headers">
      Likes
    </td>
    <td>
      <%= @giftee.likes %>
    </td>
  </tr>
  <tr>
    <td class="table-headers">
      Dislikes
    </td>
    <td>
      <%= @giftee.dislikes %>
    </td>
  </tr>
</table>
</div>

<%= button_to "Edit", edit_giftee_path(@giftee), method: :get, class: "btn btn-default" %>
<%= button_to "Delete", "/giftees/#{@giftee.id}", method: :delete, class: "btn btn-default" %>
